
    @{
        Layout = "~/Views/Shared/_Layout.cshtml";
    }



<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ShowGrid</title>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />

    <link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />

    <script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

   

</head>
<body>
    <div class="container">
        <br />
        <div style="width:90%; margin:0 auto;">
            <table id="demoGrid" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Tên công việc</th>
                        <th>Người tạo</th>
                       
                        <th>Ngày bắt đầu</th>
                       
                        <th>Ngày kết thúc</th>
                        <th>Trạng thái</th>
                        <th>Người làm chung</th>
                        <th>Sửa</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>


    <script>

        $(document).ready(function () {
           

          
            // định dạng lại ngày tháng ở client side
            function getDateString(date) {
                var dateObj = new Date(parseInt(date.substr(6)));
                return dateObj.toDateString();
            };

            // tạo bảng 
            $("#demoGrid").DataTable({
                
                "processing": true, // for show progress bar
                "serverSide": true, // for process server side
                "filter": true, // this is for disable filter (search box)
                "orderMulti": false, // for disable multiple column at once
                "pageLength": 5,
              
                
                "ajax": {
                    "url": "/Todo/LoadData",
                    "type": "POST",
                    "datatype": "json"
                },
                


                "columns": [
                      { "data": "title", "name": "title", "autoWidth": true },
                      { "data": "user_name", "name": "user_name", "autoWidth": true },
                    
                      {
                          "data": "start_date",
                          "render": function (data) { return getDateString(data); }
                      },
                       {
                           "data": "end_date",
                           "render": function (data) { return getDateString(data); }
                       },
                     
                      { "data": "status", "name": "status", "autoWidth": true },
                      { "data": "partner", "name": "partner", "autoWidth": true },
                      
                  
                       
                      {
                          "render": function (data, type, full, meta)
                          { return '<a class="btn btn-info" href="/Todo/Edit/' + full.todo_id + '">Edit</a>'; }
                      }
                      /*
                       {
                           data: null, render: function (data, type, row) {
                               return "<a href='#' class='btn btn-danger' onclick=DeleteData('" + row.CustomerID + "'); >Delete</a>";
                           }
                       },
                       */
                       
                ]

            });

        });
    </script>
</body>

</html>  